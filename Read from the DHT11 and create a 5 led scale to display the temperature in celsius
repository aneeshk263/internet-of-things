#include <SimpleDHT.h>

// for DHT11, 
//      VCC: 5V or 3V
//      GND: GND
//      DATA: 2
int pinDHT11 = 0;
SimpleDHT11 dht11;

void setup() {
  Serial.begin(115200);
  pinMode(15, OUTPUT);
  pinMode(12, OUTPUT);
  pinMode(2, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(16, OUTPUT);
}

void loop() {
  // start working...
  Serial.println("=================================");
  Serial.println("Sample DHT11...");
  
  // read without samples.
  byte temperature = 0;
  byte humidity = 0;
  if (dht11.read(pinDHT11, &temperature, &humidity, NULL)) {
    Serial.print("Read DHT11 failed.");
    return;
  }
 if((int)temperature <= 15){
digitalWrite(16, HIGH);
delay(1000);
digitalWrite(16, LOW);
delay(1000);
}
if((int)temperature < 20 && (int)temperature > 15){
digitalWrite(4, HIGH);
delay(1000);
digitalWrite(4, LOW);
delay(1000);
}
if((int)temperature >= 20 && (int)temperature < 23) {
digitalWrite(2, HIGH);
delay(1000);
digitalWrite(2, LOW);
delay(1000);
}
if((int)temperature >= 23 && (int)temperature < 26){
digitalWrite(12, HIGH);
delay(1000);
digitalWrite(12, LOW);
delay(1000);
}
if((int)temperature >= 26){
digitalWrite(15, HIGH);
delay(1000);
digitalWrite(15, LOW);
delay(1000);
}
  
  Serial.print("Sample OK: ");
  Serial.print((int)temperature); Serial.print(" *C, "); 
  Serial.print((int)humidity); Serial.println(" %");
  
  // DHT11 sampling rate is 1HZ.
  delay(1000);
}
